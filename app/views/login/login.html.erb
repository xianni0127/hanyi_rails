
<%= form_for :child, :url => {:action => 'login'} do |f| %>
  <p>
    <%= t('Username')%>: <%= f.text_field :name, id: :child_name %>
  </p>

  <p>
    <%= t('Password')%>: <%= f.password_field :password, id: :child_password %>
  </p>

  <div class="actions">
    <%= submit_tag ('Login')%>
  </div>
  <%= link_to t('Register'), children_path %>
<% end %>
