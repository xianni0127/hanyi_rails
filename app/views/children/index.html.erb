<p id="notice"><%= notice %></p>

<h1><%=t('Children')%></h1>


<table>
  <thead>
    <tr>
      <th><%= t('Name')%></th>
      <th><%= t('Description')%></th>
      <th><%= t('Picture')%></th>
      <th><%= t('Email')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Child.all.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.description %></td>
        <td><%= child.picture %></td>
        <td><%= child.email %></td>
        <td><%= link_to t('Show'), child %></td>
        <td><%= link_to t('Edit'), edit_child_path(child) %></td>
        <td><%= link_to t('Destroy'), child, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New Child'), new_child_path %>
<br>
<%= render 'children/language' %>
